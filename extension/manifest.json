{
  "manifest_version": 3,
  "name": "Hola Eduard!",
  "description": "This is my awesome description",
  "version": "1.0.1",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "permissions": ["tabs","activeTab"],
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["./content.js"],
      "matches": ["*://chat.openai.com/*"],
      "run_at": "document_end"
    }
  ]
}
